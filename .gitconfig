[core]
        excludesfile = ~/.gitignore_global
[user]
        name = Alec Cunningham
        email = alec@integracredit.com
[alias]
        f  = fetch --prune
        p  = pull --prune
        st = status
        br = branch
        co = checkout
        ci = commit
        cp = cherry-pick
        df = diff
        dc = diff --cached
        lg = log -p
        pr = pull --rebase
        gr = log --all --graph --decorate --oneline
        count = "!f() { compareBranch=${1-master}; git rev-list --count HEAD ^$compareBranch; }; f"
        patch = !git --no-pager diff --no-color # git patch > changes.patch

        # %x09    Tab
        # %H      Commit Hash(full)
        # %h      Commit Hash(short)
        # %an     Author Name
        # %ae     Author Email
        # %ad     Author Date
        # %cn     Comitter Name
        # %ce     Comitter Email
        # %cd     Comitter Date
        # %s      message
        # %d      branch/tag
        # %C(red bold) start color
        #    [color] = [normal, black, red, green, yellow, blue, magenta, cyan, white]
        #    [style] = [bold, dim, ul, blink, reverse]
        # %C(reset)  reset color
        logp = log -p
        logs = log --stat
        loga = log --graph --all --color --pretty='%x09%h %s %C(red)%d%C(reset)'
        logo = log --graph --date=format:'%y-%m-%d [%a] %T' --pretty=format:'%C(green)%ad%C(reset) %an %ae %s'
        logg = log --graph --date=format:'%y-%m-%d(%a) %T'  --pretty=format:'%h %C(green)%cd %C(blue)%ad %C(green)%cn %C(blue)%an %C(green)%ce %C(blue)%ae %C(reset)%s'
[merge]
        conflictstyle = diff3
[filter "lfs"]
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
        required = true
[commit]
        gpgsign = false
[color]
        ui = true
        whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[color "diff-highlight"]
        oldNormal = red bold
        oldHighlight = red bold 52
        newNormal = green bold
        newHighlight = green bold 22
[color "diff"]
        meta = yellow
        frag = magenta bold
        commit = yellow bold
        old = red bold
        new = green bold
        whitespace = red reverse
